#
# style sheet according to PRL author guidelines for double column sized figures
#
# Konstantin Holzhausen
#

figure.figsize:		6.75, 3.375	# figure size in inches
figure.dpi:		300
figure.subplot.wspace:	0.3
figure.subplot.hspace:	0.3

text.usetex:		True

font.size:		26
font.family:		serif
font.weight:		normal
font.serif:		Computer Modern Roman

legend.fontsize:	18
legend.frameon:		False

axes.labelsize:		18
axes.labelpad:		3.0
axes.titlesize:		20
axes.labelweight:	normal
axes.spines.top:	False
axes.spines.right:	False

lines.linewidth:	2.0
lines.markersize:	3.5
lines.markeredgewidth:	0.5
lines.markeredgecolor:	black

xtick.labelsize:	16
xtick.major.pad:	1.5
ytick.labelsize:	16
ytick.major.pad:	1.5

savefig.format:		pdf

